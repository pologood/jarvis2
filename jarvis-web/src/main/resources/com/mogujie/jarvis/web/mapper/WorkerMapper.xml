<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mogujie.jarvis.web.mapper.WorkerMapper">



    <sql id="workerCondition">
        <where>
            <if test="workerGroupId!=null">
                workerGroupId=#{workerGroupId}
            </if>
            <if test="ip!=null and ip!=''">
                AND ip=#{ip}
            </if>
            <if test="port!=null">
                AND port=#{port}
            </if>
            <if test="status!=null">
                AND status=#{status}
            </if>
        </where>
    </sql>

    <sql id="workerGroupCondition">
        <where>
            <if test="name!=null and name!=''">
                `name`=#{name}
            </if>
            <if test="updateUser!=null and updateUser!=''">
                AND updateUser=#{updateUser}
            </if>
        </where>
    </sql>

    <sql id="pager">
        <if test="offset!=null and limit!=null">
            limit #{offset},#{limit}
        </if>
    </sql>
    <!--========================================================-->

    <select id="getWorkerById" parameterType="Integer" resultType="WorkerVo">
        SELECT * FROM worker WHERE id=#{id}
    </select>
    <select id="getWorkerByIpAndPort" parameterType="Map" resultType="WorkerVo">
        SELECT * FROM worker where ip=#{ip} AND port=#{port} limit 0,1;
    </select>
    <select id="getWorkerCount" parameterType="WorkerQo" resultType="Integer">
        SELECT count(1) FROM worker
         <include refid="workerCondition" />
    </select>
    <select id="getWorkerList" parameterType="WorkerQo" resultType="WorkerVo">
        SELECT worker.*,worker_group.name AS workerGroupName FROM worker LEFT JOIN worker_group ON worker.workerGroupId=worker_group.id
        <include refid="workerCondition" />
        <include refid="pager" />
    </select>
    <select id="getAllWorkerIp" resultType="String">
        SELECT DISTINCT ip FROM worker;
    </select>
    <select id="getAllWorkerPort" resultType="Integer">
        SELECT DISTINCT port FROM worker;
    </select>


    <select id="getAllWorkerGroup" resultType="WorkerGroupVo">
      SELECT * FROM worker_group;
    </select>
    <select id="getWorkerGroupById" parameterType="Integer" resultType="WorkerGroupVo">
        SELECT * FROM worker_group WHERE id=#{id};
    </select>
    <select id="getWorkerGroupByName" parameterType="String" resultType="WorkerGroupVo">
        SELECT * FROM worker_group WHERE name=#{_parameter} limit 0,1;
    </select>
    <select id="getWorkerGroupCount" parameterType="WorkerGroupQo" resultType="Integer">
        SELECT count(1) FROM worker_group
        <include refid="workerGroupCondition" />
    </select>
    <select id="getWorkerGroupList" parameterType="WorkerGroupQo" resultType="WorkerGroupVo">
        SELECT * FROM worker_group
        <include refid="workerGroupCondition" />
        <include refid="pager" />
    </select>
    <select id="getAllWorkerGroupCreator" resultType="String">
        SELECT DISTINCT `updateUser` FROM worker_group;
    </select>
    

</mapper>